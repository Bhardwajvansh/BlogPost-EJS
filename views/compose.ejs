<%- include("partials/header") -%>

<h1>Compose</h1>
<form action="/" method="post">
    <div class="form-group">
        <label for="blogname">Title</label>
        <br>
        <input style="width: 100%;" type="text" name="blogname">
    </div>
    <div class="form-group">
        <label for="blogcontent">Post</label>
        <br>
        <textarea name="blogcontent" style="width: 100%;" cols="30" rows="10"></textarea>
    </div>
    <button class="btn btn-primary" type="submit">Publish</button>
</form>

